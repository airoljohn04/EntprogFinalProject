<div class="text-center">
    <div class="col-md-5">
        <div class="dt-body-center bg-dark">
            <div class="form-group bg-primary text-center text-light">
                <h2> @ViewData["Title"] </h2>
            </div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-light">
                <h4>Create a new account.</h4>
                <hr />

                <!--Registration for Customer and Administrator of the website-->
                <h5 class="bg-primary">Register as:</h5>
                <input type="checkbox" name="Admin" value="Administrator" />
                <label for="Admin"> Admin </label>
                <input type="checkbox" name="Cust" value="Customer" />
                <label for="Cust"> Customer </label>

                <!--Registration Form-->
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="bg-primary text-light">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br/>
                <div class="bg-primary text-light">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br/>
                <div class="bg-primary text-light">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <br/>
                <button type="submit" class="btn btn-primary">Register</button>
                <hr/>
            </form>
        </div>
    </div>

